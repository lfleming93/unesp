<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Data entrada</th>
      <th>Data nasc</th>
      <th>Especie</th>
      <th>Filiacao</th>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Installation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.data_entrada %></td>
        <td><%= animal.data_nasc %></td>
        <td><%= animal.especie %></td>
        <td><%= animal.filiacao %></td>
        <td><%= animal.nome %></td>
        <td><%= animal.categoria %></td>
        <td><%= animal.installation %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

